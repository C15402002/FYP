<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">
    <TextView
        android:id="@+id/aboutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/charcoal"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25sp"
        android:gravity="center"
        android:text="@string/aboutName"/>

    <TextView
        android:id="@+id/aboutDesc"
        android:layout_below="@+id/aboutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/charcoal"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        android:text="@string/aboutDesc"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/about"
        android:layout_below="@+id/aboutDesc"
        android:contentDescription="About us " />

</RelativeLayout>