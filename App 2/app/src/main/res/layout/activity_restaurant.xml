<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal"
    tools:context=".activities.RestaurantActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/rests"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_margin="4dp"
        app:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/beige"
            android:layout_weight="9"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/scanDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scanDesc"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="50dp"
                />

            <Button
                android:id="@+id/scanBtn"
                android:layout_width="150dp"
                android:layout_below="@+id/scanDesc"
                android:layout_height="wrap_content"
                android:text= "@string/scanbtn"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/colorAccent" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rests"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:textSize="30sp"
            android:text="Available Restaurants"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/rests">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/restList">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>




</RelativeLayout>